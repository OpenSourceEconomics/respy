{

  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },

  "builders": [
      {
          "type": "amazon-ebs",
          "access_key": "{{user `aws_access_key`}}",
          "secret_key": "{{user `aws_secret_key`}}",
          "region": "us-east-1",
          "source_ami": "ami-cf68e0d8",
          "instance_type": "t2.micro",
          "ssh_username": "ubuntu",
          "ami_name": "respy"
      }
  ],

  "provisioners": [
      {
          "type": "file",
          "source": "provison.py",
          "destination": "/tmp/provison.py"
      },

      {
          "type": "shell",
          "script": "provison.sh"
      }
  ]
}
