{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "home_dir": "{{env `HOME`}}",
    "project_dir": "{{env `HOME`}}/restudToolbox"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_keypair_name": "respy",
      "ssh_private_key_file": "{{user `home_dir`}}/.ssh/ec2-respy.pem",
      "region": "us-east-1",
      "source_ami": "ami-cf68e0d8",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "respy"
    }
  ],
  "provisioners": [
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "{{user `project_dir`}}/chef-respy/site-cookbooks",
        "{{user `project_dir`}}/chef-respy/cookbooks"
      ],
      "run_list": [
        "recipe[respy]"
      ]
    }
  ]
}
